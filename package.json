{
    "name": "bun-elysia-template",
    "version": "1.0.50",
    "scripts": {
        "build": "bun build ./src/index.ts --outdir ./dist --target bun",
        "start": "bun run ./dist/index.js",
        "test": "bun test --preload ./test/setup.ts",
        "dev": "bun run --watch src/index.ts",
        "db-types": "kysely-codegen",
        "format": "prettier --write .",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "migration:latest": "bunx kysely migrate latest",
        "migration:up": "bunx kysely migrate up",
        "migration:down": "bunx kysely migrate down"
    },
    "dependencies": {
        "@bogeychan/elysia-logger": "^0.1.8",
        "@elysiajs/cors": "^1.2.0",
        "@elysiajs/swagger": "^1.2.2",
        "@types/pg": "^8.11.11",
        "elysia": "latest",
        "elysia-helmet": "^2.0.0",
        "eslint": "^9.24.0",
        "kysely": "^0.27.6",
        "pg": "^8.14.1",
        "pino-pretty": "^13.0.0",
        "ts-scribe": "^0.4.1"
    },
    "devDependencies": {
        "@elysiajs/eden": "^1.2.0",
        "@eslint/js": "^9.24.0",
        "@types/eslint": "^9.6.1",
        "@typescript-eslint/eslint-plugin": "^8.29.1",
        "@typescript-eslint/parser": "^8.29.1",
        "bun-types": "latest",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "kysely-codegen": "^0.18.3",
        "kysely-ctl": "^0.12.1",
        "prettier": "^3.5.3",
        "typescript-eslint": "^8.29.1"
    },
    "module": "src/index.js"
}
